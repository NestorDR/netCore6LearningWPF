<Application x:Class="LearningWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LearningWPF"
             xmlns:system="clr-namespace:System;assembly=System.Runtime"
             Startup="App_Startup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Common/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <system:String x:Key="ApplicationResourceString">Hello World! From Application Resource</system:String>

            <!--Visit: https://docs.microsoft.com/en-us/uwp/api/Windows.UI.Xaml.GridLength?view=winrt-22621-->
            <GridLength x:Key="CommonColumnWidth">130</GridLength>
            <system:Double x:Key="CommonControlWidth">130</system:Double>

            <!--#region Style resources -->
            <Style x:Key="ScreenStyle" TargetType="Control">
                <!-- Shared Setters -->
                <Setter Property="Background" Value="LightCyan"></Setter>
            </Style>
            <Style TargetType="UserControl"
                    BasedOn="{StaticResource ScreenStyle}">
            </Style>
            <Style TargetType="Window"
                    BasedOn="{StaticResource ScreenStyle}">
            </Style>

            <Style x:Key="SubtitleStyle" TargetType="TextBlock">
                <Setter Property="FontWeight" Value="Bold"></Setter>
            </Style>
            <!--#endregion-->
        </ResourceDictionary>
    </Application.Resources>
</Application>
